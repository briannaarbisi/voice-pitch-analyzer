<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context="de.lilithwittmann.voicepitchanalyzer.fragments.SettingsFragment">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/label_use_web_page"
                    android:id="@+id/webPageLabel"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/webPageSwitch" android:showText="false" android:singleLine="false"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textWebEmailAddress"
                    android:id="@+id/editWebPageText" android:enabled="true" android:layout_span="2"/>
        </TableRow>
    </TableLayout>
    <Button
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_about"
            android:id="@+id/aboutButton"
    />
</LinearLayout>
